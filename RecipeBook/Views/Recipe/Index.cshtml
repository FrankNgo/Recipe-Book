@{
  Layout = "_Layout";
}
<h1>Recipes</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Contents</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var recipe in Model)
    {
      <tr>
        <td><a href="/recipe/@recipe.GetId()">@recipe.GetName()</a></td>
         <td><a href="/recipe/@recipe.GetId()/delete"><span class="glyphicon glyphicon-remove"></span></a></td>
      </tr>
    }
  </tbody>
</table>
<a href="/recipe/new">Add New Recipe</a>
<a href="/">Return to Home</a>
